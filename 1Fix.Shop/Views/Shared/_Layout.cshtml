    <script type="text/javascript">
        $(function () {
            //控制导航栏高亮
            var isOn = false;
            var url = window.location.href;
            $("#ul-nav li").eq(0).addClass("on");
            $("#ul-nav li").each(function () {
                var href = $(this).children("a").attr("href");
                if (url.indexOf(href) > 0) {
                    $("#ul-nav li").removeClass("on");
                    $(this).addClass("on");
                    return false;
                } else {
                    isOn = true;
                }
            });
            if (isOn) {
                //$("#ul-nav li").removeClass("on");
                //$("#ul-nav li").eq(0).addClass("on");
            }
        });
