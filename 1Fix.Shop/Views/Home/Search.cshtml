                $("#downone").addClass("gray-down");
                $("#orderbydate").val(1);
                $("#orderbyprice").val("");
                $("#orderbyclicknum").val("");
                submitData();
            }
        } else {
            $("#upone").removeClass("black-up")
            $("#upone").addClass("gray-up");
            if ($("#downone").hasClass("gray-down")) {
                $("#downone").removeClass("gray-down");
                $("#downone").addClass("black-down");
                $("#orderbydate").val(0);
                $("#orderbyprice").val("");
                $("#orderbyclicknum").val("");
                submitData();
            }
        };
    }

    function orderbysecond(obj) {
        if ($("#uptwo").hasClass("gray-up")) {
            $("#uptwo").removeClass("gray-up")
            $("#uptwo").addClass("black-up");
            if ($("#downtwo").hasClass("black-down")) {
                $("#downtwo").removeClass("black-down");
                $("#downtwo").addClass("gray-down");
                $("#orderbyclicknum").val(1);
                $("#orderbyprice").val("");
                $("#orderbydate").val("");
                submitData();
            }
        } else {
            $("#uptwo").removeClass("black-up")
            $("#uptwo").addClass("gray-up");
            if ($("#downtwo").hasClass("gray-down")) {
                $("#downtwo").removeClass("gray-down");
                $("#downtwo").addClass("black-down");
                $("#orderbyclicknum").val(0);
                $("#orderbyprice").val("");
                $("#orderbydate").val("");
                submitData();
            }
        }
    }
</script>
