<script type="text/javascript">
    function submitData() {
        $("#divSellPhoneListForm").submit();
    }
    $(function () {
        $("div.detailXq table.formdata tr td.noxiang").mouseenter(function () {
            $(this).addClass("col")
        }).mouseout(function () {
            $(this).removeClass("col");
        })
        $("div.detailXq table.formdata tr").eq(0).find(".noxiang").click(function () {
            //$("div.detailXq table.formdata tr").eq(0).find(".noxiang span").removeClass("sel");
            //$(this).addClass("sel");
            $(this).addClass("col1").siblings().removeClass("col1");
            $("#jb").val($(this).attr("val"));
            submitData();
        })
        $("div.detailXq table.formdata tr").eq(1).find(".noxiang").click(function () {
            $(this).addClass("col1").siblings().removeClass("col1");
            $("#phonemodelid").val($(this).attr("val"));
            submitData();
        })
        $("div.detailXq table.formdata tr").eq(2).find(".noxiang").click(function () {
            $(this).addClass("col1").siblings().removeClass("col1");
            $("#color").val($(this).attr("val"));
            submitData();
        })
    });
    //三角表色
    function orderby(obj) {
        if ($("#up").hasClass("gray-up")) {
            $("#up").removeClass("gray-up")
            $("#up").addClass("black-up");
            if ($("#down").hasClass("black-down")) {
                $("#down").removeClass("black-down");
                $("#down").addClass("gray-down");
                $("#orderbyprice").val(1);
                $("#orderbydate").val("");
                $("#orderbyclicknum").val("");
                submitData();
            }
        } else {
            $("#up").removeClass("black-up")
            $("#up").addClass("gray-up");
            if ($("#down").hasClass("gray-down")) {
                $("#down").removeClass("gray-down");
                $("#down").addClass("black-down");
                $("#orderbyprice").val(0);
                $("#orderbydate").val("");
                $("#orderbyclicknum").val("");
                submitData();
            }
        };
    }

    function orderbyfirst(obj) {
        if ($("#upone").hasClass("gray-up")) {
            $("#upone").removeClass("gray-up")
            $("#upone").addClass("black-up");
            if ($("#downone").hasClass("black-down")) {
