@{
    Layout = null;
}
@using _1Fix.Entity
@model MicroMessage_Money
<script type="text/javascript">
    function success(data) {
        if (data.status > 0) {
            alert("保存成功");
            $('#myModal1').modal('hide');
            window.location.href = "/MicroMessage/Index";
        }
    }
</script>
<div class="modal-header">
    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">&times;</button>
    <h4 class="modal-title">二手机价格表编辑</h4>
</div>
@using (Ajax.BeginForm("SaveMicroMessage", "", new AjaxOptions { HttpMethod = "post", OnSuccess = "success" }, new { id = "editMicroMessageForm" }))
{
    <div class="modal-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="col-sm-3 control-label">手机型号：<span class="asterisk"></span></label>
                    <div class="col-sm-9">
                        <input type="text" required="" value="@(Model==null?"":Model.PhoneName)" class="form-control" placeholder="请输入手机型号" name="PhoneName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">EX：<span class="asterisk"></span></label>
                    <div class="col-sm-9">
                        <input type="text" required="" value="@(Model == null ? "" : Model.EX.ToString())" class="form-control" placeholder="请输入EX" name="EX">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">VG：<span class="asterisk"></span></label>
                    <div class="col-sm-9">
                        <input type="text" required="" value="@(Model == null ? "" : Model.VG.ToString())" class="form-control" placeholder="请输入VG" name="VG">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">GD：<span class="asterisk"></span></label>
                    <div class="col-sm-9">
                        <input type="text" required="" value="@(Model == null ? "" : Model.GD.ToString())" class="form-control" placeholder="请输入GD" name="GD">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">FR：<span class="asterisk"></span></label>
                    <div class="col-sm-9">
                        <input type="text" required="" value="@(Model == null ? "" : Model.FR.ToString())" class="form-control" placeholder="请输入FR" name="FR">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">排序：<span class="asterisk"></span></label>
                    <div class="col-sm-9">
                        <input type="text" required="" value="@(Model == null ? "" : Model.OrderID.ToString())" class="form-control" placeholder="请输入排序" name="OrderID">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="hidden" name="ID" value="@(Model==null?0:Model.ID)" />
        <button data-dismiss="modal" class="btn btn-default" id="btnClose" type="button">关闭</button>
        <button type="submit" class="btn btn-primary">保存</button>
    </div>
}
<script type="text/javascript">
    jQuery("#editMicroMessageForm").validate({
        rules: {
            PhoneName: {
                required: true
            },
            EX: {
                required: true,
                digits: true
            },
            VG: {
                required: true,
                digits: true
            },
            GD: {
                required: true,
                digits: true
            },
            FR: {
                required: true,
                digits: true
            },
            OrderID: {
                required: true,
                digits: true
            }
        },
        messages: {
            PhoneName: {
                required: "请输入手机型号"
            },
            EX: {
                required: "请输入EX",
                digits: "请输入数字类型"
            },
            VG: {
                required: "请输入VG",
                digits: "请输入数字类型"
            },
            GD: {
                required: "请输入GD",
                digits: "请输入数字类型"
            },
            FR: {
                required: "请输入FR",
                digits: "请输入数字类型"
            },
            OrderID: {
                required: "请输入排序",
                digits: "请输入数字类型"
            }
        },
        highlight: function (element) {
            jQuery(element).closest('.form-group').removeClass('has-success').addClass('has-error');
        },
        success: function (element) {
            jQuery(element).closest('.form-group').removeClass('has-error');
        }
    });
</script>