@{
    Layout = null;
    decimal SumPrice = 0;
}
@using _1Fix.Entity.Model
@model System.Collections.Generic.List<CuSellPhoneOrderDetail>
<div class="modal-header">
    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">&times;</button>
    <h4 class="modal-title">订单详细信息</h4>
</div>
<div class="modal-body">
    @if (Model == null)
    {
        <div>暂无信息</div>
    }
    else
    {
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table table-success mb30">
                        <thead>
                            <tr>
                                <th>项号</th>
                                <th>手机型号</th>
                                <th>IMEI</th>
                                <th>价格(元)</th>
                                <th>内存</th>
                                <th>颜色</th>
                                <th>数量</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SellPhoneOrderDetail.ItemNo</td>
                                    <td>@item.CheckFacility.phonename</td>
                                    <td>@item.SellPhoneOrderDetail.Sn</td>
                                    <td>@item.SellPhoneOrderDetail.PhonePrice</td>
                                    <td>@item.CheckFacility.size</td>
                                    <td>@item.CheckFacility.color</td>
                                    <td>@item.SellPhoneOrderDetail.Num</td>
                                </tr>
                                SumPrice += (decimal)item.SellPhoneOrderDetail.PhonePrice;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10">
            </div>
            <div class="col-sm-2">
                总价:@(SumPrice) 元
            </div>
        </div>
    }
</div>
<div class="modal-footer">
    <button data-dismiss="modal" class="btn btn-default" id="btnClose" type="button">关闭</button>
</div>
