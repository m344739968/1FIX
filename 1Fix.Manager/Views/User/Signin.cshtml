@using _1Fix.Common
@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    FunResult result = ViewBag.Data as FunResult;
}
<div class="signinpanel">

    <div class="row">

        <div class="col-md-7">

            <div class="signin-info">
                <div class="logopanel">
                    <h1><span>[</span> 1Fix <span>]</span></h1>
                </div><!-- logopanel -->

                <div class="mb20"></div>

                <h5><strong>Welcome to 1Fix system platform!</strong></h5>
                <ul>
                    <li><i class="fa fa-arrow-circle-o-right mr5"></i> 万修商城后台管理</li>
                    <li><i class="fa fa-arrow-circle-o-right mr5"></i> 用户管理</li>
                    <li><i class="fa fa-arrow-circle-o-right mr5"></i> 寄卖管理</li>
                    <li><i class="fa fa-arrow-circle-o-right mr5"></i> 订单管理</li>
                    <li><i class="fa fa-arrow-circle-o-right mr5"></i> 更多...</li>
                </ul>
                @*<div style="text-align:left;">
                    <img style="line-height:260px; width:190px;" src="/Images/logo_sigin.png" />
                </div>*@
                @*<div class="mb20"></div>
                    <strong>没有账号? <a href="#">注册</a></strong>*@
            </div><!-- signin0-info -->

        </div><!-- col-sm-7 -->

        <div class="col-md-5">

            <form id="signinForm" method="post" action="/User/Signin">
                <h4 class="nomargin">登录</h4>
                <p class="mt5 mb20">登录访问后台管理系统</p>
                <div class="form-group">
                    <input name="username" required="" type="text" class="form-control uname" placeholder="账号" />
                </div>
                <div class="form-group">
                    <input name="password" required="" type="password" class="form-control pword" placeholder="密码" />
                </div>
                <a href="#"><small>忘记密码?</small></a>
                @if (result != null && result.Status == false)
                {
                    <div class="well" style="color:#ff0000;"><i class="fa fa-exclamation-circle"></i> @result.Msg</div>
                }
                <button id="btnSignin" class="btn btn-success btn-block">登 录</button>

            </form>
        </div><!-- col-sm-5 -->

    </div><!-- row -->

    <div class="signup-footer">
        <div class="pull-left">
            粤ICP备14085298号 Copyright© 2014-2015
        </div>
        <div class="pull-right">
            Created By: <a href="http://www.1fix.cn" target="_blank">万修科技</a>
        </div>
    </div>

</div><!-- signin -->
<script type="text/javascript">
    jQuery("#signinForm").validate({
        messages: {
            username: "请输入账号",
            password: "请输入密码"
        },
        highlight: function (element) {
            jQuery(element).closest('.form-group').removeClass('has-success').addClass('has-error');
        },
        success: function (element) {
            jQuery(element).closest('.form-group').removeClass('has-error');
        }
    });
</script>