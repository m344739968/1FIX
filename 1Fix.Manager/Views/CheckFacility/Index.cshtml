@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Webdiyer.WebControls.Mvc
@using _1Fix.Entity
@model PagedList<CheckFacility>
<div class="pageheader">
    <h2><i class="fa fa-mobile-phone"></i> 手机检测信息查询 <span>Subtitle goes here...</span></h2>
    <div class="breadcrumb-wrapper">
        <span class="label">您的位置:</span>
        <ol class="breadcrumb">
            <li><a href="/Home/Index">首页</a></li>
            <li class="active">手机检测信息查询</li>
        </ol>
    </div>
</div>
<div class="contentpanel">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-btns">
                        @*<a class="panel-close" href="">×</a>*@
                        <a class="minimize" href="">−</a>
                    </div>
                    <h4 class="panel-title">高级查询</h4>
                    @*<p>This is an example of a form using a placeholder instead of label.</p>*@
                </div>
                @using (Ajax.BeginForm("Index", "", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "divList" }, new { id = "divForm" }))
                {
                    <div class="panel-body">
                        <div class="row row-pad-5">
                            <div class="col-xs-3">
                                <input type="text" class="form-control" placeholder="手机名称" name="key">
                            </div>
                            <div class="col-xs-3">
                                <input type="text" class="form-control" placeholder="IMEI" name="sn">
                            </div>
                            <div class="col-xs-3">
                                <button type="submit" class="btn btn-primary" id="btnSearch">搜索</button>
                            </div>
                            <div class="col-xs-3">
                            </div>
                        </div><!-- row -->
                    </div><!-- panel-body -->
                    <div class="panel-footer">
                        @*<button type="submit" class="btn btn-primary">搜索</button>*@
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div id="divList" class="table-responsive">
                @Html.Partial("List", Model)
            </div><!-- table-responsive -->
        </div>
    </div>
</div>
@{Html.RegisterMvcPagerScriptResource();}